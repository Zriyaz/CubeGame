# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values
# docker-compose will automatically read from .env file

# JWT Secrets (generate secure random strings)
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production

# Google OAuth Credentials (Required)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# URLs (Optional - defaults provided)
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
FRONTEND_URL=http://localhost:5173

# Logging (Optional)
LOG_LEVEL=info

# Database Configuration
POSTGRES_DB=socket_game
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# Service Ports
BACKEND_PORT=5000
FRONTEND_PORT=5173

# Connection URLs (Auto-generated from above, or override manually)
# DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/socket_game
# REDIS_URL=redis://:redis123@redis:6379

# Frontend Environment Variables
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000
