# Development Dockerfile for backend
FROM node:20-alpine

WORKDIR /app

# Install dependencies for building TypeScript
RUN apk add --no-cache python3 make g++

# Copy root package files for workspace setup
COPY package.json package-lock.json ./

# Copy shared package (for initial setup)
COPY packages/shared ./packages/shared

# Copy backend package files
COPY packages/backend/package*.json ./packages/backend/
COPY packages/backend/tsconfig.json ./packages/backend/

# Install root dependencies (for workspace)
RUN npm install

# Copy backend source code (will be overridden by volume mount, but needed for initial build)
COPY packages/backend ./packages/backend

# Set working directory to backend
WORKDIR /app/packages/backend

# Expose port
EXPOSE 5000

# Start development server with nodemon
CMD ["npm", "run", "dev"]
